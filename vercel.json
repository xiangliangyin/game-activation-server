{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    },
    {
      "src": "/",
      "dest": "/api/health",
      "status": 301
    },
    {
      "src": "/health",
      "dest": "/api/health"
    },
    {
      "src": "/status",
      "dest": "/api/status"
    }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 10,
      "memory": 1024
    }
  }
}
